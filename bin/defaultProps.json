{
	// define location of animations in HMD files
	"hmd.animPaths" : [],

	// path to js scripts containing hide plugins
	"plugins" : [],

	// custom renderers in the form of { "Name" : "MaterialSetupClassName" }
	"renderers" : {},

	// model names that are hidden when open in viewer
	"scene.autoHide" : [],
	// background color for 2D/3D viewer
	"scene.backgroundColor" : "#111111",
	// default env map for PBR renderer
	"scene.environment" : "${HIDE}/res/defaultEnv.jpg",

	// controls
	"key.cancel" : "Escape",
	"key.undo" : "Ctrl-Z",
	"key.redo" : "Ctrl-Y",
	"key.save" : "Ctrl-S",

	"key.copy" : "Ctrl-C",
	"key.cut" : "Ctrl-X",
	"key.paste" : "Ctrl-V",
	"key.duplicate" : "Ctrl-D",
	"key.delete" : "Delete",
	"key.group" : "Ctrl-G",

	"key.search" : "Ctrl-F",
	"key.rename" : "F2",
	"key.selectAll" : "Ctrl-A",
	"key.playPause" : "Space",

	// cdb keys

	"key.cdb.showReferences" : "Shift+F12",
	"key.cdb.gotoReference" : "F12",
	"key.cdb.closeList" : "Escape",
	"key.cdb.editCell" : "Enter",
	"key.cdb.insertLine" : "Insert",

	// Scene editor config
	"key.sceneeditor.focus": "F",
	"key.sceneeditor.lasso": "L",
	"key.sceneeditor.hide": "H",
	"key.sceneeditor.showAll": "Ctrl-H",
	"key.sceneeditor.isolate": "I",
	"key.sceneeditor.selectParent": "Backspace",
	"key.sceneeditor.reparent": "Ctrl-P",

	// cdb config
	"cdb.databaseFile" : "data.cdb",

	// script support
	"script.api.files" : [],
	"script.cdbPackage" : "",
	"script.api" : {
		"TableName.fieldName" : {
			"globals" : { "this" : "ThisClass" },
			"events" : "EventType",
			"context" : "ContextClass",
			"cdbEnums" : ["MyTable"]
		}
	},

	// paths to look files/shaders into - relative to project root
	"haxe.classPath" : ["src"],

	// Scene editor config
	// Snap size when using grid snapping
	"sceneeditor.gridSnapStep": 1.0,
	"sceneeditor.rotateStepCoarse": 45,
	"sceneeditor.rotateStepFine": 15,

	// Quantization steps (0 for none)
	"sceneeditor.xyzPrecision": 0.01,
	"sceneeditor.scalePrecision": 0.01,
	"sceneeditor.rotatePrecision": 0.1,

	// l3d config
	"l3d.groundLayer": "ground",
	"l3d.cdbLevel": "level",
	"l3d.colors": {
	},
	"l3d.treeStyles": {
		"settings": {"color": "#ffffff", "font-weight": "bold"}
	},

	// FX editor
	"fx.shaders": [
		"h3d.shader.AnimatedTexture",
		"h3d.shader.ColorAdd"],

	// reserved for internal ide usage
	"debug.displayErrors" : true,
	"hide" : {},

	// Brushes for terrain
	"terrain.brushes": [
        { "name": "Default", "texture" : "${HIDE}/res/brushes/default.jpg", "step" : 3, "size" : 30, "strength" : 1.0 },
		{ "name": "Crystal", "texture" : "${HIDE}/res/brushes/crystal.jpg", "step" : 0.5, "size" : 12, "strength" : 1.0 },
		{ "name": "Vortex", "texture" : "${HIDE}/res/brushes/vortex.jpg", "step" : 0.5, "size" : 12, "strength" : 1.0 },
		{ "name": "Carre", "texture" : "${HIDE}/res/brushes/carre.jpg", "step" : 0.5, "size" : 6, "strength" : 1.0 }
	]
}